        (command: MoveToTag, value: "9", modifier: ["modkey", "Shift"], key: "9"),
        (command: MoveToTag, value: "10", modifier: ["Mod1", "Shift"], key: "0"),
        (command: MoveToTag, value: "11", modifier: ["Mod1", "Shift"], key: "1"),
        (command: MoveToTag, value: "12", modifier: ["Mod1", "Shift"], key: "2"),
        (command: MoveToTag, value: "13", modifier: ["Mod1", "Shift"], key: "3"),
        (command: MoveToTag, value: "14", modifier: ["Mod1", "Shift"], key: "4"),
        (command: MoveToTag, value: "15", modifier: ["Mod1", "Shift"], key: "5"),
        (command: MoveToTag, value: "16", modifier: ["Mod1", "Shift"], key: "6"),
