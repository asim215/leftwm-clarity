        (command: GotoTag, value: "9", modifier: ["modkey"], key: "9"),
        (command: GotoTag, value: "10", modifier: ["Mod1"], key: "0"),
        (command: GotoTag, value: "11", modifier: ["Mod1"], key: "1"),
        (command: GotoTag, value: "12", modifier: ["Mod1"], key: "2"),
        (command: GotoTag, value: "13", modifier: ["Mod1"], key: "3"),
        (command: GotoTag, value: "14", modifier: ["Mod1"], key: "4"),
